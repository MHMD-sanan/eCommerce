                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Costumers List
                        </div>
                        <div class="card-body">
                            <% if(details!=null) { %>
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email Address</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% details.forEach(function(user){ %>
                                    <tr>
                                        <td><%=user.name%></td>
                                        <td><%=user.email%></td>
                                        <td>
                                            <% if(user.status==true) {%>
                                                <a class="btn btn-danger" href="/admin_panel/updateUser?id=<%= user._id%>" role="button">Disable</a>
                                            <%}else{%>
                                                <a class="btn btn-primary" href="/admin_panel/updateUser?id=<%= user._id%>" role="button">Enable</a>
                                            <%}%>
                                        </td>
                                    </tr>   
                                    <% }) %>
                                </tbody>
                            </table>
                            <% } %>
                        </div>
                    </div>
                </div>
