<%-include('./layout/header.ejs')%>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Costumers</h1>

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Costumers List
                        </div>
                        <div class="card-body">
                            <% if(details!=null) { %>
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email Address</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% details.forEach(function(user){ %>
                                    <tr>
                                        <td><%=user.name%></td>
                                        <td><%=user.email%></td>
                                        <td>
                                            <% if(user.status==true) {%>
                                                <a class="btn btn-danger" href="/admin_panel/updateUser?id=<%= user._id%>" role="button">Block</a>
                                            <%}else{%>
                                                <a class="btn btn-success" href="/admin_panel/updateUser?id=<%= user._id%>" role="button">Unblock</a>
                                            <%}%>
                                        </td>
                                    </tr>   
                                    <% }) %>
                                </tbody>
                            </table>
                            <% } %>
                        </div>
                    </div>
                </div>
<%-include('./layout/footer.ejs')%>