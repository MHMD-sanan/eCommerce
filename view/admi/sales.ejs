<%-include('./layout/header.ejs')%>
<div class="container">
    <div class="d-flex justify-content-end me-4 mt-3">
        <form action="/admin_panel/downloadSalesReport" method="post" class="m-3">
            <label for="">From</label>
            <input type="date" name="from" required>
            <label for="">To</label>
            <input type="date" name="to" required>
            <label for="">format</label>
            <select name="format" id="">
                <option value="pdf">Pdf</option>
                <option value="excel">Excel</option>
            </select>
            <input type="submit" value="Dowload">
        </form>
        <!-- <a href="/admin_panel/exportPDF"><i class="fa fa-file-pdf ms-2"></i></a>
        <a href="/admin_panel/exportExcel"><i class="fa fa-file-excel ms-2"></i></a> -->
    </div>
    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Sale
        </div>
        <div class="card-body">
            <% if(orders!=null) { %>
            <table id="example" class="display">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Payment</th>
                        <th>Items</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <%orders.forEach(function(order){ %>
                        <tr>
                            <%let date = order.date%>
                            <%let isoString = date.toISOString()%>
                            <%let newDate = isoString.split('T')[0]%>
                            <td><%=newDate%></td>
                            <td><%=order.user.name%></td>
                            <td><%=order.payment%></td>
                            <td><%=order.products.items.length%></td>
                            <td><%=order.products.totalPrice%></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</div>

<%-include('./layout/footer.ejs')%>