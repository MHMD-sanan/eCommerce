<%-include('./layout/header.ejs')%>

<div class="container">
    <div class="my-3 d-flex justify-content-end me-5">
        <p>Dowload Sales Report:-</p>
        <a href="/admin_panel/exportPDF"><i class="fa fa-file-pdf ms-2"></i></a>
        <a href="/admin_panel/exportExcel"><i class="fa fa-file-excel ms-3 me-5"></i></a>
    </div>
    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Orders List
        </div>
        <div class="card-body">
            <% if(orders!=null) { %>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Payment</th>
                        <th>Items</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <%orders.forEach(function(order){ %>
                        <tr>
                            <%let date = order.date%>
                            <%let isoString = date.toISOString()%>
                            <%let newDate = isoString.split('T')[0]%>
                            <td><%=newDate%></td>
                            <td><%=order.user.name%></td>
                            <td><%=order.payment%></td>
                            <td><%=order.products.items.length%></td>
                            <td><%=order.products.totalPrice%></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</div>

<%-include('./layout/footer.ejs')%>