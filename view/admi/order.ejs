<%-include('./layout/header.ejs')%>
<div class="container-fluid px-4">
    <h1 class="mt-4">Orders</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Orders List
        </div>
        <div class="card-body">
            <% if(orders!=null) { %>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th>Items</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <%orders.forEach(function(order){ %>
                        <tr>
                            <%let date = order.date%>
                            <%let isoString = date.toISOString()%>
                            <%let newDate = isoString.split('T')[0]%>
                            <td><%=newDate%></td>
                            <td><%=order.user.name%></td>
                            <td><%=order.payment%></td>
                            <td>
                                <%if(order.status=='Delivered'){%>
                                    <%=order.status%>
                                <%}else{%>
                                    <form action="/admin_panel/orderStatus" method="post">
                                        <select name="status">
                                            <option selected><%=order.status%></option>
                                            <option value="Placed">Placed</option>                                        
                                            <option value="Shipped">Shipped</option>
                                            <option value="Delivered">Delivered</option>
                                            <option value="Cancelled">Cancelled</option>
                                          </select>
                                          <input type="hidden" value="<%=order._id%>" name="orderId">
                                        <button type="submit" style="border: 0;background-color: white;">update</button>
                                    </form>
                                <%}%>
                            </td>
                            <td><%=order.products.items.length%></td>
                            <td><%=order.products.totalPrice%></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</div>
<%-include('./layout/footer.ejs')%>