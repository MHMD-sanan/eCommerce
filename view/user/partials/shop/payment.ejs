<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    const form=document.querySelector('.form');
    form.addEventListener ('submit',async event=>{
      event.preventDefault();
      const formData=new FormData(form);
      const payment=formData.get('paymentMethode');
      let response=await fetch("http://localhost:4000/create-checkout-session", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body:JSON.stringify({
          payment:payment
        })
      });
      let orderData=await response.json();
      
      if(orderData.success==false){
        location.href=orderData.url
      }else{
        var options = {
    "key": "rzp_test_2xERoSusyd4f84", // Enter the Key ID generated from the Dashboard
    "amount": orderData.amount*100, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    "currency": "INR",
    "name": "Acme Corp",
    "order_id": orderData.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
    "handler": function (response){
        // alert(response.razorpay_payment_id);
        // alert(response.razorpay_order_id);
        // alert(response.razorpay_signature);
        location.href=location.href=orderData.url
        },
      };
    var rzp1 = new Razorpay(options);
    rzp1.open();
      }
    })
</script>
