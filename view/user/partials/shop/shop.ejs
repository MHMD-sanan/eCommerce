<%-include('../../layout/header.ejs')%>

<div class="untree_co-section product-section ">
	<div class="container">
		<div class="row">
			
			<!-- <div class="btn-group dropright">
				<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				  Dropleft
				</button>
				<div class="dropdown-menu">
				  <a class="dropdown-item" href="">ssff</a>
				  <a class="dropdown-item" href="">ssff</a>
					<a class="dropdown-item" href="">ssff</a>
				</div>
			</div> -->
			
			<div>
				<div class="op">
					<div class="dropdown" style="float: right;">
						<button class="dropbtn" >Sort</button>
						<div class="dropdown-content">
							<a  href="?sort=">Relevence</a>
							<a href="?sort=asort">High to low</a>
							<a href="?sort=dsort">Low to high</a>
						</div>
					</div>

					<div class="dropdown" style="float:left;">
						<button class="dropbtn" >Filter</button>
						<div class="dropdown-content" >
							<a href="?category=">All Products</a>
							<% if(category!=null){%>
								<% category.forEach((category)=>{%>
									<a href="?category=<%=category.name%>"><%=category.name%></a>
								 <%})%>
							 <%}%>
						</div>
					</div>
		
						<form class="d-flex justify-content-center">
							<input type="text"  placeholder="search product" class="w-25 me-2" name="search" style="border:0 ;border-radius: 5px;">
							<input class="dropbtn" type="submit" value="Search">
						</form>
				</div>
		
				<div class="row">
					<%if(details==null || details.length==0){%>
						<p>No product found</p>
					<%}else{%>
						<% details.forEach((product)=>{ %>
							<%if(product.status==true){%>
								<div class="col-12 col-md-4 col-lg-3" id="data">
									<a class="product-item" href="/product/<%=product._id%>">
										<img src="<%=product.image%>" class="img-fluid product-thumbnail">
										<h3 class="product-title"><%=product.name%></h3>
										<strong class="product-price">$<%=product.price%>.00</strong>
									</a>
								</div>		
							<%}%>
						<%})%>
					<%}%>
					
					<nav aria-label="Page navigation example">
						<ul class="pagination justify-content-center">
							<%if(page!=1){%>
								<li class="page-item">
									<a class="page-link" href="?page=<%=prvs%>" aria-label="Previous">
									  <span aria-hidden="true">&laquo;</span>
									  <span class="sr-only">Previous</span>
									</a>
								  </li>
							<%}%>
							<%for(let j=1;j<=totalPages;j++){%>
								<li class="page-item"><a class="page-link" href="?page=<%=j%>"><%=j%></a></li>
							<%}%>
							<%if(page!=totalPages){%>
								<li class="page-item">
									<a class="page-link" href="?page=<%=next%>" aria-label="Next">
									  <span aria-hidden="true">&raquo;</span>
									  <span class="sr-only">Next</span>
									</a>
								</li>
							<%}%>
						</ul>
					</nav>
				</div>	
			</div>
		</div>
	</div>
</div>

<style>
	.page-link{
		color: #3b5d50;
	}
	.page-link:hover{
		color: #3b5d50;

	}
</style>

<%-include('../../layout/footer.ejs')%>

