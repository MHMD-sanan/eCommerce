<%-include('../../layout/header.ejs')%>
<div class="untree_co-section">
  <div class="container">    
    <div class="row">
      <div class="col-md-6 mb-5 mb-md-0">
        <h2 class="h3 mb-3  ">Shipping Details</h2>
        <div class="p-3 p-lg-5 border bg-white">
          <%if(address!=null){%>
            <%address.forEach((item)=>{%>
              <div class="card" style="width: 23rem;">
                <div class="card-body">
                  <h5 class="card-title"><%=item.name%></h5>
                  <p class="card-text"><%=item.home%><%=item.pincode%><%=item.state%><%=item.mobile_num%></p>
                  <a class="btn btn-primary btn-sm"" href="/payment/<%=item._id%>">Deliver Here</a>
                </div>
              </div>
              <br>
            <%})%>
          <%}%>
          <br>
          <div class="form-group">  
            <label for="c_ship_different_address" class="text" data-bs-toggle="collapse" href="#ship_different_address" role="button" aria-expanded="false" aria-controls="ship_different_address"><b>Ship To A Different Address?  </b></label>
            <div class="collapse" id="ship_different_address">
              <div class="py-2">
                <form action="/saveAdd" method="post">

                  <div class="form-group row">
                    <div class="col-md-6">
                      <label for="c_diff_lname" class="text">Name <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="name">
                    </div>
                  </div>
  
                  <div class="form-group row  mb-3">
                    <div class="col-md-12">
                      <label for="c_diff_address" class=" ">Address <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="home" placeholder="Street address">
                    </div>
                  </div>  

                  <div class="form-group row">
                    <div class="col-md-6">
                      <label for="c_diff_state_country" class=" ">State <span class="text-danger">*</span></label>
                      <input type="text" class="form-control"  name="state">
                    </div>
                    <div class="col-md-6">
                      <label for="c_diff_postal_zip" class=" ">Posta / Zip <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="pincode">
                    </div>
                  </div>
  
                  <div class="form-group row mb-5">
                    <div class="col-md-6">
                      <label for="c_diff_email_address" class=" ">Email Address <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="email">
                    </div>
                    <div class="col-md-6">
                      <label for="c_diff_phone" class=" ">Phone <span class="text-danger">*</span></label>
                      <input type="text" class="form-control"name="mobile_num" placeholder="Phone Number">
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary btn-sm py-3 btn-block">Save Address</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="row mb-5">
          <div class="col-md-12">
            <h2 class="h3 mb-3">Coupon Code</h2>
            <div class="p-3 p-lg-5 border bg-white">

              <label for="c_code" class=" mb-3">Enter your coupon code if you have one</label>
              <div class="input-group w-75 couponcode-wrap">
                <input type="text" class="form-control me-2" id="c_code" placeholder="Coupon Code" aria-label="Coupon Code" aria-describedby="button-addon2">
                <div class="input-group-append">
                  <button class="btn btn-primary btn-sm" type="button" id="button-addon2">Apply</button>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="row mb-5">
          <div class="col-md-12">
            <h2 class="h3 mb-3  ">Your Order</h2>
            <div class="p-3 p-lg-5 border bg-white">
              <table class="table site-block-order-table mb-5">
                <thead>
                  <th>Product</th>
                  <th>Total</th>
                </thead>
                <tbody>
                  <%if(cart!=null){%>
                    <%for(let i=0;i<cart.items.length;i++){%>
                      <%let eachItem=cart.items[i]%>
                      <tr>
                        <td><%=eachItem.productId.name%><strong class="mx-2">x</strong><%=eachItem.qty%></td>
                        <td>$<%=eachItem.productId.price%></td>
                      </tr>
                    <%}%>
                  <%}%>
                  <tr>
                    <td class="text-black font-weight-bold"><strong>Coupon Applied</strong></td>
                    <td class="text-black">$350.00</td>
                  </tr>
                  <tr>
                    <td class="  font-weight-bold"><strong>Order Total</strong></td>
                    <td class="  font-weight-bold"><strong>$<%=cart.totalPrice%></strong></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%-include('../../layout/footer.ejs')%>